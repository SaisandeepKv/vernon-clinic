# Google Places API - for dynamic reviews
# Get your API key: https://console.cloud.google.com/apis/credentials
# Enable: Places API (New) or Places API
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Google Place ID for Vernon Skin and Hair Clinic
# Find it: https://developers.google.com/maps/documentation/places/web-service/place-id
GOOGLE_PLACE_ID=your_place_id_here

# WhatsApp Business API (optional - for automated lead routing)
# Provider: Interakt or Wati
WHATSAPP_API_KEY=your_whatsapp_api_key_here
WHATSAPP_PHONE_ID=your_phone_id_here

# Supabase (for dynamic content: blog, gallery, updates)
# Create project: https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Admin Panel Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password-here
SESSION_SECRET=your-random-secret-here-at-least-32-chars

# Google Search Console Verification
GOOGLE_SITE_VERIFICATION=your_verification_code_here

# Vercel AI Gateway — routes AI requests through Vercel's gateway
# Get your key: https://vercel.com/dashboard → AI Gateway
AI_GATEWAY_API_KEY=your_vercel_ai_gateway_key_here

# Google Gemini AI — used for skin/hair photo analysis (vision model)
# Get your API key: https://aistudio.google.com/apikey
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key_here

# Notion API — booking & callback data saved to Notion database
# Create integration: https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_api_key_here
